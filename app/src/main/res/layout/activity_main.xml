<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/callBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CallBack" />

        <Button
            android:id="@+id/basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basics" />

        <Button
            android:id="@+id/sequential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sequential" />

        <Button
            android:id="@+id/parallel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parallel" />

        <Button
            android:id="@+id/scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scope" />

        <Button
            android:id="@+id/globalScope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dangerous GlobalScope" />

        <Button
            android:id="@+id/concurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Structured Concurrency" />

        <Button
            android:id="@+id/roomDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room DB" />

        <Button
            android:id="@+id/workManager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Manager" />

        <Button
            android:id="@+id/liveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Data"
            android:visibility="gone" />

        <Button
            android:id="@+id/flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Flow"
            android:visibility="gone" />

        <Button
            android:id="@+id/flow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realtime Flow"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>